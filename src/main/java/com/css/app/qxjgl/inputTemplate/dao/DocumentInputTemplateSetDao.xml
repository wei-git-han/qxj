<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.qxjgl.inputTemplate.dao.DocumentInputTemplateSetDao">

	<select id="queryObject" resultType="com.css.app.qxjgl.inputTemplate.entity.DocumentInputTemplateSet">
		select * from QXJ_INPUT_NEW_TEMPLATE_SET where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.qxjgl.inputTemplate.entity.DocumentInputTemplateSet">
		select * from QXJ_INPUT_NEW_TEMPLATE_SET
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from QXJ_INPUT_NEW_TEMPLATE_SET
	</select>
	 
	<insert id="save" parameterType="com.css.app.qxjgl.inputTemplate.entity.DocumentInputTemplateSet">
		insert into QXJ_INPUT_NEW_TEMPLATE_SET
		(
			"ID", 
			"USER_ID", 
			"INPUT_TEMPLATE", 
			"CREATED_DATE",
			"PEN_WIDTH"
		)
		values
		(
			#{id}, 
			#{userId}, 
			#{inputTemplate},
			#{createdDate}, 
			#{penWidth}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.qxjgl.inputTemplate.entity.DocumentInputTemplateSet">
		update QXJ_INPUT_NEW_TEMPLATE_SET
		<set>
			<if test="userId != null">"USER_ID" = #{userId}, </if>
			<if test="inputTemplate != null">"INPUT_TEMPLATE" = #{inputTemplate}, </if>
			<if test="createdDate != null">"CREATED_DATE" = #{createdDate}</if>
			<if test="penWidth != null">"PEN_WIDTH" = </if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from QXJ_INPUT_NEW_TEMPLATE_SET where ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from QXJ_INPUT_NEW_TEMPLATE_SET where ID in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	<delete id="delSetByUserId">
		delete from QXJ_INPUT_NEW_TEMPLATE_SET where user_id=#{userId}
	</delete>
	

</mapper>