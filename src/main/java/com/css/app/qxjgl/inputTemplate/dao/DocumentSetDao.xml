<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.qxjgl.inputTemplate.dao.DocumentSetDao">
	
	<select id="querySetByUserId" resultType="com.css.app.qxjgl.inputTemplate.entity.DocumentSet">
		select top 1 * from QXJ_DOCUMENT_SET where USER_ID = #{value}
	</select>
	
	<insert id="save" parameterType="com.css.app.qxjgl.inputTemplate.entity.DocumentSet">
		insert into QXJ_DOCUMENT_SET
		(
			"ID", 
			"USER_ID", 
			"PEN"
		)
		values
		(
			#{id}, 
			#{userId}, 
			#{pen}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.qxjgl.inputTemplate.entity.DocumentSet">
		update QXJ_DOCUMENT_SET 
		<set>
			<if test="userId != null">"USER_ID" = #{userId}, </if>
			<if test="pen != null">"PEN" = #{pen}</if>
		</set>
		where ID = #{id}
	</update>

</mapper>