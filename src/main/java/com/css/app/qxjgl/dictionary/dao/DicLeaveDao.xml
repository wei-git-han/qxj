<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.qxjgl.dictionary.dao.DicLeaveDao">

	<select id="queryObject" resultType="com.css.app.qxjgl.dictionary.entity.DicLeave">
		select * from QXJ_DIC_LEAVE where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.qxjgl.dictionary.entity.DicLeave">
		select * from QXJ_DIC_LEAVE 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from QXJ_DIC_LEAVE 
	</select>
	 
	<insert id="save" parameterType="com.css.app.qxjgl.dictionary.entity.DicLeave">
		insert into QXJ_DIC_LEAVE
		(
			"ID", 
			"LEAVE_STATUS", 
			"REMARK"
		)
		values
		(
			#{id}, 
			#{leaveStatus}, 
			#{remark}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.qxjgl.dictionary.entity.DicLeave">
		update QXJ_DIC_LEAVE 
		<set>
			<if test="leaveStatus != null">"LEAVE_STATUS" = #{leaveStatus}, </if>
			<if test="remark != null">"REMARK" = #{remark}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from QXJ_DIC_LEAVE where ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from QXJ_DIC_LEAVE where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>