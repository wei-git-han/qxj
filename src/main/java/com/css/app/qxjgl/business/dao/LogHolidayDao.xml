<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.qxjgl.business.dao.LogHolidayDao">

	<select id="queryObject" resultType="com.css.app.qxjgl.business.entity.LogHoliday">
		select * from QXJ_LOG_HOLIDAY where id = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.qxjgl.business.entity.LogHoliday">
		select * from QXJ_LOG_HOLIDAY 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from QXJ_LOG_HOLIDAY 
	</select>
	 
	<insert id="save" parameterType="com.css.app.qxjgl.business.entity.LogHoliday">
		insert into QXJ_LOG_HOLIDAY
		(
			"id", 
			"USERID", 
			"USERNAME", 
			"DEPTID", 
			"DEPTNAME", 
			"afterDays", 
			"log_time",
			"MODIFYUSERID",
			"MODIFYUSERNAME"
		)
		values
		(
			#{id}, 
			#{userid}, 
			#{username}, 
			#{deptcode}, 
			#{deptname}, 
			#{afterdays}, 
			#{logTime},
			#{modifyUserid},
			#{modifyUserName}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.qxjgl.business.entity.LogHoliday">
		update QXJ_LOG_HOLIDAY 
		<set>
			<if test="userid != null">"USERID" = #{userid}, </if>
			<if test="username != null">"USERNAME" = #{username}, </if>
			<if test="deptcode != null">"DEPTCODE" = #{deptcode}, </if>
			<if test="deptname != null">"DEPTNAME" = #{deptname}, </if>
			<if test="beforedays != null">"beforeDays" = #{beforedays}, </if>
			<if test="afterdays != null">"afterDays" = #{afterdays}, </if>
			<if test="logTime != null">"log_time" = #{logTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from QXJ_LOG_HOLIDAY where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from QXJ_LOG_HOLIDAY where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>